@model Userr

@{
    ViewData["Title"] = "UyeOl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<main class="main-content">

  
    <!--== Start Account Area Wrapper ==-->
    <section class="section-space">
        <div class="container">
            <div class="row mb-n8">
               
                <div class="col-lg-12 mb-8">
                    <!--== Start Register Area Wrapper ==-->
                    <div class="my-account-item-wrap">
                        <h3 class="title">Kayıt Ol</h3>
                        <div class="my-account-form">
                            <form action="/hesap/uyeol" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group mb-6">
                                    <label for="register_username">Eposta <sup>*</sup></label>
                                    <input type="email" name="Emaill" value="@Model.Emaill" id="register_username">
                                </div>

                                <div class="form-group mb-6">
                                    <label for="register_pwsd">Şifre <sup>*</sup></label>
                                    <input type="password" name="Passwordd" id="register_pwsd">
                                </div>
                                <div class="form-group mb-6">
                                    <label for="register_pwsd">Şifre Tekrarı <sup>*</sup></label>
                                    <input type="password" name="PasswordRepeatt" id="register_pwsd">
                                </div>
                                <div class="form-group">
                                    <p class="desc mb-4">Kişisel verileriniz, bu web sitesindeki deneyiminizi desteklemek, hesabınıza erişimi yönetmek ve gizlilik politikamızda açıklanan diğer amaçlar için kullanılacaktır.</p>
                                    <input type="submit" class="btn" value="Kayıt Ol" />
                                </div>
                            </form>
                        </div>
                    </div>
                    <!--== End Register Area Wrapper ==-->
                </div>
            </div>
        </div>
    </section>
    <!--== End Account Area Wrapper ==-->

</main>
@model HomeViewModel
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <main class="main-content">

            <!--== Start Contact Area Wrapper ==-->
            <section class="contact-area">
                <div class="container">
                    <div class="row">
                        <div class="offset-lg-6 col-lg-6">
                            <div class="section-title position-relative">
                                <h2 class="title">Bize Ulaşın</h2>
                                <p class="m-0">Size daha iyi bir hizmet vermek için istek, görüş ve önerilerinizi önemsiyoruz.</p>
                                <div class="line-left-style mt-4 mb-1"></div>
                            </div>
                            <!--== Start Contact Form ==-->
                            <div class="contact-form">
                                <form id="contact-form" action="https://whizthemes.com/mail-php/raju/arden/mail.php" method="POST">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input class="form-control" type="text" name="con_name" placeholder=" Adı">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input class="form-control" type="text" placeholder="Soyadı">
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <input class="form-control" type="email" name="con_email" placeholder="E-posta Adresi">
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <textarea class="form-control" name="con_message" placeholder="Mesaj"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group mb-0">
                                                <button class="btn btn-sm" type="submit">GÖNDER</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!--== End Contact Form ==-->
                            <!--== Message Notification ==-->
                            <div class="form-message"></div>
                        </div>
                    </div>
                </div>

                @*sukuşu*@
                <div class="contact-left-img" data-bg-img="/clientt/assets/images/photos/contact.webp"></div>
            </section>
            <!--== End Contact Area Wrapper ==-->
            <!--== Start Contact Area Wrapper ==-->
            <section class="section-space">
                <div class="container">
                    <div class="contact-info">
                        <div class="contact-info-item">
                            <img class="icon" src="~/clientt/assets/images/icons/1.webp" width="30" height="30" alt="Icon">
                            <a href="tel://+11020303023">Telefon: 0216 000 0000</a>
                            <a href="tel://+11020303023">Faks: 0216 000 0000</a>
                        </div>
                        <div class="contact-info-item">
                            <img class="icon" src="~/clientt/assets/images/icons/2.webp" width="30" height="30" alt="Icon">
                            <a href="mailto://example@demo.com">kozmetik@demo.com</a>
                            <a href="mailto://demo@example.com">demo@kozmetik.com</a>
                        </div>
                        <div class="contact-info-item mb-0">
                            <img class="icon" src="~/clientt/assets/images/icons/3.webp" width="30" height="30" alt="Icon">
                            <p>Yunus, 34873 Kartal/İstanbul </p>
                        </div>
                    </div>
                </div>
            </section>
            <!--== End Contact Area Wrapper ==-->

            <div class="map-area">
        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d4104.747390233987!2d29.20731989683204!3d40.884066930151285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1str!2str!4v1681656121425!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

        </main>





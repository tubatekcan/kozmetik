@model List<Cart>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">

    <!--== Start Product Area Wrapper ==-->
    <section class="section-space">
        <div class="container">
            <div class="shopping-cart-form table-responsive">
                <form action="#" method="post">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th class="product-remove">&nbsp;</th>
                                <th class="product-thumbnail">&nbsp;</th>
                                <th class="product-name">Ürün</th>
                                <th class="product-price">Fiyat</th>
                                <th class="product-quantity">Adet</th>
                                <th class="product-subtotal">Toplam</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (Cart cart in Model)
                            {
                                <tr class="tbody-item">
                                    <td class="product-remove">
                                        <a class="remove" href="javascript:void(0)">×</a>
                                    </td>
                                    <td class="product-thumbnail">
                                        <div class="thumb">
                                            <a href="single-product.html">
                                                <img src="~/clientt/assets/images/shop/cart1.webp" width="68" height="84" alt="Image-HasTech">
                                            </a>
                                        </div>
                                    </td>
                                    <td class="product-name">
                                        <a class="title" href="single-product.html">@cart.Product.ProductName</a>
                                    </td>
                                    <td class="product-price">
                                        <span class="price">₺@cart.Product.ProductPrice</span>
                                    </td>
                                    <td class="product-quantity">
                                        <div class="pro-qty">
                                            <input type="text" class="quantity" title="Quantity" value="@cart.Quantity">
                                        </div>
                                    </td>
                                    <td class="product-subtotal">
                                        <span class="price">₺@(cart.Product.ProductPrice * cart.Quantity)</span>
                                    </td>
                                </tr>

                            }

                            <tr class="tbody-item-actions">
                                <td colspan="6">
                                    <button type="submit" class="btn-update-cart disabled" disabled>Sepeti Güncelle</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </form>
            </div>
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="cart-totals-wrap">
                        <h2 class="title">SEPET TUTARI</h2>
                        <table>
                            <tbody>
                                <tr class="cart-subtotal">
                                    <th>Ürün Toplam:</th>
                                    <td>
                                        <span class="amount">₺@Model.Sum(a=>a.Product.ProductPrice*a.Quantity)</span>

                                        <span></span>

                                    </td>
                                </tr>
                                <tr class="shipping-totals">
                                    <th>Kargo</th>
                                    <td>
                                        <ul class="shipping-list">
                                            <li class="radio">
                                                <input type="radio" name="shipping" id="radio1" checked>
                                                <label for="radio1">Kargo Bedeli: <span>₺ 15.00</span></label>
                                            </li>
                                        </ul>
                                        <a href="javascript:void(0)" class="btn-shipping-address">Adres Değiştir</a>
                                    </td>
                                </tr>
                                <tr class="order-total">
                                    <th>Toplam: </th>
                                    <td>
                                        <span class="amount">₺@(Model.Sum(a=>a.Product.ProductPrice*a.Quantity)+15)</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="text-end">
                            <a href="/Sepet/SatinAl" class="checkout-button">Satın Al</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--== End Product Area Wrapper ==-->

</main>
